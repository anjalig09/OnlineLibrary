@{
}
@model OnlineBookStore.Areas.Admin.ViewModels.AdminBookViewModel

<form asp - action="Delete" method="post" class="form-horizontal" role="form">
    <h4>Fill out your details</h4>

    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.HiddenFor(e => e.Book.BookId)
    <div class="form-group">
        <label asp-for="@Model.Book.Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Book.Name" class="form-control" />

        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Book.Price" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Book.Price" class="form-control" />

        </div>
    </div>
    <div class="form-group col-md-4">
        <label>Category</label>
        <select asp-for="@Model.Book.CategoryId" asp-items="@(new SelectList(Model.CategoriesList, nameof(Category.CategoryId), nameof(Category.CategoryName)))" class="form-control">
            <option>Select</option>


        </select>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.AuthorName" class="col-md-2 control-label">Author</label>
        <div class="col-md-5">
            <input asp-for="@Model.Book.AuthorName" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.ShortDescription" class="col-md-2 control-label">Short Description</label>
        <div class="col-md-5">
            <input asp-for="@Model.Book.ShortDescription" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.ImageUrl" class="col-md-2 control-label">Image</label>
        <div class="col-md-5">
            <input asp-for="@Model.Book.ImageUrl" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.LongDescription" class="form-label"> Long Description</label>
        <div class="col-md-5">
            <textarea asp-for="@Model.Book.LongDescription" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>

        </div>
    </div>
    <div>
        <button asp-action="Remove" asp-route-id="@Model.Book.BookId">Delete</button>
    </div>

</form>