@model Book
        
<tr>

    <td class="text-center">@Model.BookId</td>
    <td class="text-left">@Model.Name</td>
    <td class="text-left">@Model.Category.CategoryName</td>
    <td class="text-right">
        @Model.Price.ToString("c")
    </td>
    <td>
        <a asp-controller="AdminBook"asp-action="Edit" asp-route-id="@Model.BookId">Edit</a>
        <a >Details</a>
        <a asp-action="Delete" asp-route-id="@Model.BookId">Delete</a>
    </td>

</tr>

        

    
   
