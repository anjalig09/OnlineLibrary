@model Book
<div class="cardstyle">
    <div class="card" style="width: 18rem; ">
        <img src="@Model.ImageUrl" class="card-img-top" alt="" style="height:300px;width:18rem;">
        <div class="card-body">
            <h3 class="card-title"> @Model.Name</h3>
            <h4>@Model.Category.CategoryName</h4>
            <h6>@Model.Price.ToString("c")</h6>
            <p class="card-text">Author:@Model.AuthorName</p>
            <div class="row">
                <div class="col-md-5">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-primary">More</a>
                </div>
                <div class="col-md-6">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookId="@Model.BookId">Add to cart</a>
                </div>
            </div>
        </div>
    </div>
</div>