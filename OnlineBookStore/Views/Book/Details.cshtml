@{
    ViewData["Title"] = "Details";
}
@model Book


<div class="row">
    <div class="col-md-6">
        <img alt="" src="@Model.ImageUrl" style="align-items:center;width:500px;height:500px;">
    </div>
    <div class="col-md-6">

        <h1>@Model.Name</h1>
        @*<h2>@Model.Category.CategoryName</h2>*@
        <h3 class="pull-right"> @Model.Price.ToString("c")</h3>
        <h4>Author:@Model.AuthorName</h4>
        <p>@Model.LongDescription</p>
        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookId="@Model.BookId">Add to cart</a>
    </div>
</div>
